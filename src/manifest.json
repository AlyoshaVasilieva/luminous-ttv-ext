{
  "manifest_version": 2,
  "name": "Luminous TTV",
  "version": "0.8.0",
  "description": "Avoid Twitch livestream ads by retrieving the playlist from Russia",
  "background": {
    "scripts": [
      "ts/background.ts"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.twitch.tv/*"
      ],
      "js": [
        "ts/content.ts"
      ],
      "css": [
        "css/content.css"
      ]
    }
  ],
  "options_ui": {
    "page": "html/options.html",
    "browser_style": true
  },
  "icons": {
    "128": "images/icon.png"
  },
  "browser_action": {
    "default_title": "Set server address",
    "default_popup": "html/options.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "luminous-ttv@sovietnation.net",
      "strict_min_version": "59.0"
    }
  },
  "permissions": [
    "activeTab",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "http://localhost/*",
    "https://*.twitch.tv/*",
    "https://usher.ttvnw.net/*",
    "https://*.amazon-adsystem.com/*"
  ]
}
