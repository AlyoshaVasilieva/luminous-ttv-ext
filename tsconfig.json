{
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "Node",
    "target": "ES2020",
    "esModuleInterop": false,
    "sourceMap": false,
    "rootDir": "src/",
    "outDir": "dist/src/js",
    "noEmitOnError": true,
    "alwaysStrict": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src/ts/*.ts"
  ]
}
